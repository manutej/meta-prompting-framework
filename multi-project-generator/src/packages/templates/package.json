{
  "name": "@mpg/templates",
  "version": "0.1.0",
  "private": true,
  "description": "Template downloading, processing, and validation for MPG",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./download": {
      "types": "./dist/download/index.d.ts",
      "import": "./dist/download/index.js"
    },
    "./process": {
      "types": "./dist/process/index.d.ts",
      "import": "./dist/process/index.js"
    },
    "./validate": {
      "types": "./dist/validate/index.d.ts",
      "import": "./dist/validate/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mpg/shared": "workspace:*",
    "giget": "^2.0.0",
    "handlebars": "^4.7.8",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
