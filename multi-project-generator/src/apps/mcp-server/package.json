{
  "name": "@mpg/mcp-server",
  "version": "0.1.0",
  "private": true,
  "description": "MCP Server for Multi-Project Generator - Exposes MPG tools to AI agents",
  "type": "module",
  "bin": {
    "mpg-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
