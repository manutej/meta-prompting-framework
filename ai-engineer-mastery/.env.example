# AI Engineer Mastery - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# LLM API Keys (Required for all levels)
# ============================================

# Anthropic Claude API
# Get your key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ============================================
# Optional: Additional LLM Providers
# ============================================

# Cohere (for embeddings, reranking)
# COHERE_API_KEY=your_cohere_key_here

# Hugging Face (for model downloads)
# HUGGINGFACE_API_KEY=your_hf_key_here

# ============================================
# Vector Database Configuration (Level 4+)
# ============================================

# Pinecone (cloud vector DB)
# PINECONE_API_KEY=your_pinecone_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment

# Weaviate (cloud or local)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your_weaviate_key_here

# ============================================
# Monitoring & Observability (Level 6+)
# ============================================

# Weights & Biases (experiment tracking)
# WANDB_API_KEY=your_wandb_key_here

# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# LangSmith (LangChain tracing)
# LANGCHAIN_API_KEY=your_langsmith_key_here
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=ai-mastery

# ============================================
# Application Configuration
# ============================================

# Environment (development, staging, production)
ENV=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Max concurrent API calls
MAX_CONCURRENT_CALLS=5

# Default LLM temperature
DEFAULT_TEMPERATURE=0.7

# Cache directory
CACHE_DIR=./.cache

# ============================================
# Learner Profile (Optional)
# ============================================

# Your learning preferences
LEARNING_STYLE=hands-on  # hands-on, visual, theoretical, mixed
WEEKLY_HOURS=15
TARGET_LEVEL=7
CURRENT_LEVEL=1

# Personalization
TIMEZONE=UTC
PREFERRED_LANGUAGE=en
